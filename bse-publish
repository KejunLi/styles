# see https://github.com/matplotlib/matplotlib/blob/master/lib/matplotlib/mpl-data/stylelib/classic.mplstyle

### AXES
axes.titlesize : 18
axes.labelsize : 16
axes.facecolor : white       # axes background color
axes.edgecolor : black       # axes edge color

### LINES
lines.linewidth : 2
lines.markersize : 6

### TICKS
xtick.labelsize : 16
ytick.labelsize : 16

### FONT
font.size : 16
font.family : sans-serif
font.sans-serif : Arial
font.weight : normal

### LEGEND
legend.fontsize : 16

### FIGURE
figure.titlesize : 24     # size of the figure title
#figure.figsize : 12, 4    # figure size in inches for BSE
figure.figsize : 6, 4    # figure size in inches for RPA
figure.dpi : 200      # figure dots per inch
figure.facecolor : white    # figure facecolor
figure.edgecolor : white
